# ==============================================
# Fashion Forecast Frontend - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ----------------------------------------------
# API Configuration
# ----------------------------------------------
# Backend API base URL (without trailing slash)
# Development: http://localhost:8000
# Production: https://api.your-domain.com
VITE_API_URL=http://localhost:8000

# WebSocket base URL (without trailing slash)
# Development: ws://localhost:8000
# Production: wss://api.your-domain.com
VITE_WS_URL=ws://localhost:8000

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
# Environment name (development, staging, production)
VITE_ENV=development

# Enable debug mode (detailed console logs)
VITE_DEBUG=true

# Enable mock data mode (use local mock data instead of API)
# Set to false for Phase 4+ integration
VITE_USE_MOCK_DATA=false

# ----------------------------------------------
# Feature Flags
# ----------------------------------------------
# Enable WebSocket real-time updates
VITE_ENABLE_WEBSOCKET=true

# Enable CSV upload functionality
VITE_ENABLE_CSV_UPLOAD=true

# Enable keyboard shortcuts (Alt+1-8 for sections)
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# ----------------------------------------------
# Optional: Analytics & Monitoring
# ----------------------------------------------
# Google Analytics ID (leave empty to disable)
VITE_GA_ID=

# Sentry DSN for error tracking (leave empty to disable)
VITE_SENTRY_DSN=

# ----------------------------------------------
# Optional: UI Configuration
# ----------------------------------------------
# Toast notification duration in milliseconds
VITE_TOAST_DURATION=5000

# WebSocket reconnection attempts
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000
